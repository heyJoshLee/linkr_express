body
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background rgba(255,255,255,1)

body
html
   position relative
  height 100%
  padding 0
  margin 0

.user_preview 
  border 1px solid black

nav 
  background rgba(52, 152, 219, 0.4)
  width 20%
  float left
  height 100%
  -webkit-box-shadow 1px 0px 10px 0px rgba(0,0,0,0.75)
  -moz-box-shadow 1px 0px 10px 0px rgba(0,0,0,0.75)
  box-shadow 1px 0px 10px 0px rgba(0,0,0,0.75)
  li 
    margin 0 20px
    &after
      content ""
      display none
      clear both
      
main 
  padding-left 30px
  height 100%
  overflow hidden

.thumb 
  width 150px
  height 150px

.post_preview 
  list-style none
  background-color red
  width 900px
  height 200px
  border 1px solid black
 img 
    float left
    margin-right 40px
    &:after 
      display block

.preview_info
  &:after
    display block
    content ""
    clear both

#body_input 
  width 800px
  height 200px

form.new_post 
  padding 40px 20px
  border-radius 4px
  p 
  font-size 32px
  input
    [type='text']
      width 100%
      height 40px
      border-radius 4px
      font-size 24px
    [type="submit"]
      border none
      margin-top 200px
      display block
      height 20px
      width 150px
      margin 0 auto
  textarea 
  font-size 24px







